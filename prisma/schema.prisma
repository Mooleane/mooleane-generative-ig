generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model PublishedImage {
  id        Int      @id @default(autoincrement())
  imageUrl  String   @map("image_url")
  prompt    String
  hearts    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  owner   User? @relation(fields: [ownerId], references: [id])
  ownerId String? @map("owner_id")

  likes Like[]

  @@map("published_images")
}

model User {
  id             String    @id @default(uuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?

  accounts Account[]
  sessions Session[]
  likes Like[]
  publishedImages PublishedImage[]

  @@map("users")
}

model Like {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @map("user_id")
  image     PublishedImage @relation(fields: [imageId], references: [id])
  imageId   Int      @map("image_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, imageId], map: "user_image_unique")
  @@map("likes")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @map("refresh_token")
  access_token       String? @map("access_token")
  expires_at         Int?    @map("expires_at")
  token_type         String? @map("token_type")
  scope              String?
  id_token           String? @map("id_token")
  session_state      String? @map("session_state")

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId], map: "provider_providerAccountId")
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
